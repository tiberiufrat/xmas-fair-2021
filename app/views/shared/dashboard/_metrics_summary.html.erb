<div class="row">
  <div class="col-xl-3 col-md-6">
    <div class="card card-stats">
      <!-- Card body -->
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h5 class="card-title text-uppercase text-muted mb-0"><%= t('metrics.total_purchases') %></h5>
            <span class="h2 font-weight-bold mb-0"><%= Purchase.total_sales %> <span class="small text-muted"><%= t('general.spiridoni', count: Purchase.total_sales) %></span></span>
          </div>
          <div class="col-auto">
            <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
              <i class="far fa-cash-register"></i>
            </div>
          </div>
        </div>
        <p class="mt-3 mb-0 text-sm">
          <% if Purchase.today.any? %>
            <span class="text-success mr-2"><i class="far fa-fw fa-arrow-up"></i> <%= Purchase.today.size %></span>
            <span class="text-nowrap"><%= t('metrics.purchases_today', count: Purchase.today.size) %></span>
          <% else %>
            <span class="text-nowrap"><i class="far fa-fw fa-exclamation"></i> <%= t('metrics.purchases_today', count: 0) %></span>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-xl-3 col-md-6">
    <div class="card card-stats">
      <!-- Card body -->
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h5 class="card-title text-uppercase text-muted mb-0"><%= t('metrics.users') %></h5>
            <span class="h2 font-weight-bold mb-0"><%= User.all.size %></span>
          </div>
          <div class="col-auto">
            <div class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
              <i class="far fa-users"></i>
            </div>
          </div>
        </div>
        <p class="mt-3 mb-0 text-sm">
          <% if User.today.any? %>
            <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> <%= User.today.size %></span>
            <span class="text-nowrap"><%= t('metrics.users_today', count: User.today.size) %></span>
          <% else %>
            <span class="text-warning mr-2"><i class="far fa-exclamation"></i></span>
            <span class="text-nowrap"><%= t('metrics.users_today', count: User.today.size) %></span>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-xl-3 col-md-6">
    <div class="card card-stats">
      <!-- Card body -->
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h5 class="card-title text-uppercase text-muted mb-0">Sales</h5>
            <span class="h2 font-weight-bold mb-0">924</span>
          </div>
          <div class="col-auto">
            <div class="icon icon-shape bg-gradient-green text-white rounded-circle shadow">
              <i class="ni ni-money-coins"></i>
            </div>
          </div>
        </div>
        <p class="mt-3 mb-0 text-sm">
          <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> 3.48%</span>
          <span class="text-nowrap">Since last month</span>
        </p>
      </div>
    </div>
  </div>
  <div class="col-xl-3 col-md-6">
    <div class="card card-stats">
      <!-- Card body -->
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h5 class="card-title text-uppercase text-muted mb-0">Performance</h5>
            <span class="h2 font-weight-bold mb-0">49.65%</span>
          </div>
          <div class="col-auto">
            <div class="icon icon-shape bg-gradient-info text-white rounded-circle shadow">
              <i class="ni ni-chart-bar-32"></i>
            </div>
          </div>
        </div>
        <p class="mt-3 mb-0 text-sm">
          <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> 3.48%</span>
          <span class="text-nowrap">Since last month</span>
        </p>
      </div>
    </div>
  </div>
</div>
