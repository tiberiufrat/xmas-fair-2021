<div class="header bg-<%= current_user.preferences['theme'] || 'primary' %> pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-12">
          <h6 class="h2 text-white d-inline-block mb-0"><%= t('activerecord.models.spiridon_purchase.other').capitalize %></h6>
          <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
              <li class="breadcrumb-item">
                <%= link_to '<i class="far fa-home"></i>'.html_safe, root_path %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to t('activerecord.models.spiridon_purchase.other').capitalize, spiridon_purchases_path %>
              </li>
              <li class="breadcrumb-item active" aria-current="page"><%= t '.register_new_purchase' %></li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid mt--6">
  <div class="card">
    <div class="card-header">
      <h3 class="mb-0"><i class="far fa-coins mr-1"></i> <%= t('.register_new_purchase') %></h3>
    </div>
    <div class="card-body">
      <%= render 'form', spiridon_purchase: @spiridon_purchase %>
    </div>
  </div>
  <%= link_to icon('far fa-arrow-left', t('general.back')), spiridon_purchases_path, class: 'btn btn-light' %>
</div>

<% content_for(:page_title, "#{t('general.add')} #{t('activerecord.models.spiridon_purchase.one')}") %>
